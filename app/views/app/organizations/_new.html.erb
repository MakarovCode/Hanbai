
<div class="modal fade modal-new-company" tabindex="-1" role="dialog" aria-labelledby="modal-new-company-label">
	<div class="modal-dialog modal-sm" role="document">
		<div class="modal-content">
			<%= form_for([:app, Company.new], remote: true, url: app_api_v1_organizations_path(:json), method: :post, html: {:"data-object" => "company"}) do |f| %>
			<%= render "app/layouts/auth" %>
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="modal-new-company-labe"><%= t("organizations.new.title")%></h4>
			</div>
			<div class="modal-body">
				<%= render "app/layouts/ajax_form_messages" %>

				<div class="form-group row">
					<%= f.label :name, class: "col-sm-12" %>
					<div class="col-sm-12">
						<%= f.text_field :name, class: "form-control", autofocus: true %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :address, class: "col-sm-12" %>
					<div class="col-sm-12">
						<%= f.text_field :address, class: "form-control" %>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<%= render "app/layouts/ajax_form_actions", modal: true, formid: "new_company", transaltions: "organizations.new" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
