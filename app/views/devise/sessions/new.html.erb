<div class="container" style="margin-top: 80px; margin-bottom: 40px;">
	<div class="row">
		<div class="col-md-7">

		</div>
		<div class="col-md-5">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h1 style="text-align:center;"><%= t("sign_in.title")%></h1>
				</div>
				<div class="panel-body">
					<div class="row field">
						<div class="col-md-12">
							<%= f.label :email %><br />
							<%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Escribe tu correo electrÃ³nico" %>
						</div>
					</div>

					<div class="row field">
						<div class="col-md-12">
							<%= f.label :password %><br />
							<%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Escribe tu clave" %>
						</div>
					</div>

					<% if devise_mapping.rememberable? -%>
					<div class="row field">
						<div class="col-md-12">
							<%= f.check_box :remember_me %>
							<%= f.label :remember_me %>
						</div>
					</div>
					<% end -%>

					<div class="row field">
						<div class="col-md-12">
							<%= f.submit t("sign_in.main_action"), class: "btn btn-primary btn-block btn-lg" %>
						</div>
					</div>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>
