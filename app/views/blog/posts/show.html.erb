<div class="container" style="margin-top: 80px;">
	<div class="row">
		<div class="col-md-8">
			<div class="panel panel-default">
				<div class="">
					<%= image_tag @post.image.high.url, style: "width: 100%;" %>
					<% if !@post.video.nil? && @post.video != ""%>
					<div class="embed-responsive embed-responsive-16by9">
						<%= raw @post.video %>
					</div>
					<% end %>
				</div>
				<div class="panel-body">
					<h2><%= @post.title %></h2>
					<div class="row">
						<div class="col-md-12">
							<%= raw @post.content %>
							<br />
							<hr />
							<p>
								<b><%= t("blog.by") %></b> <%= @post.author %><br />
								<b>El</b> <%= l @post.date, format: :long %>
							</p>
							<hr />
							<i class="glyphicon glyphicon-tags" style="margin-right: 20px;"></i> <%= @post.tags %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% #unless user_signed_in? %>
		<div class="col-md-4 text-center">
			<%= render "call_to_action" %>
		</div>
		<% #end %>
	</div>
</div>
