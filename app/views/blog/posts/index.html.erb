<div class="container" style="margin-top: 80px;">
	<div class="row">
		<div class="col-md-8">
			<% @posts.each do |post| %>
			<%= link_to blog_post_path(post), class: "post-entry" do %>
			<div class="panel panel-default">
				<div class="">
					<%= image_tag post.image.high.url, style: "width: 100%;" %>
				</div>
				<div class="panel-body">
					<h2><%= post.title %></h2>
					<p>
						<b><%= t("blog.by") %></b> <%= post.author %><br />
						<%= l post.date, format: :long %>
					</p>
					<hr />
					<i class="glyphicon glyphicon-tags" style="margin-right: 20px;"></i> <%= post.tags %>
				</div>
			</div>
			<% end %>
			<% end %>
			<div class="row">
				<div class="col-md-12" style="text-align: center;">
					<%= paginate @posts%>
				</div>
			</div>
		</div>
		<% #unless user_signed_in? %>
		<div class="col-md-4 text-center">
			<%= render "call_to_action" %>
		</div>
		<% #end %>
	</div>
</div>
