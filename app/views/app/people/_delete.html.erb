
<div class="modal fade modal-delete-person" tabindex="-1" role="dialog" aria-labelledby="modal-delete-person-label">
	<div class="modal-dialog modal-sm" role="document">
		<div class="modal-content">
			<%= form_for([:app, @person], remote: true, url: app_api_v1_people_path(:json), method: :delete, html: {id: "delete_person", :"data-object" => "person"}) do |f| %>
			<%= render "app/layouts/auth" %>
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="modal-delete-person-labe"><%= t("people.delete.title")%></h4>
			</div>
			<div class="modal-body">
				<%= render "app/layouts/ajax_form_messages" %>

				<div class="form-group row">
					<div class="col-sm-12 alert alert-warning">
						<%= t("people.delete.message") %>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<%= render "app/layouts/ajax_form_actions", modal: true, formid: "delete_person", transaltions: "people.delete" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
