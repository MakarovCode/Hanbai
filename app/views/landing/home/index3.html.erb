<div id="home" class="bg-image" style="background-image: url('<%= @info.main_image.high%>');">
  <div class="overlay">
    <!-- overylay class usage -->
    <div class="container">
      <div class="col-md-6 text-center">
        <%= form_for(User.new, as: "user", url: registration_path("user")) do |f| %>
        <div class="panel panel-default" style="background-color: rgba(0,0,0,0.6); border: none; border-radius: 10px;">
          <div class="panel-heading" style="background-color: rgba(0,0,0,0.6);">
            <h1 style="text-align:center; font-size: 40px; color: white; padding-top: 0px;"><%= t("sign_up.title")%></h1>
          </div>
          <div class="panel-body" style="text-align:left;">

            <%#= devise_error_messages! %>

            <div class="row field">
              <div class="col-md-12">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, class: "form-control input-lg", placeholder: "Escribe tu nombre", style: "background-color: rgba(0,0,0,0.8); color: white;" %>
              </div>
            </div>

            <div class="row field">
              <div class="col-md-12">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: false, class: "form-control input-lg", placeholder: "Escribe tu correo electrÃ³nico", style: "background-color: rgba(0,0,0,0.8); color: white;" %>
              </div>
            </div>

            <div class="row field">
              <div class="col-md-12">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Escribe tu clave", style: "background-color: rgba(0,0,0,0.8); color: white;" %>
              </div>
            </div>

            <div class="row field">
              <div class="col-md-12">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Confirma tu clave", style: "background-color: rgba(0,0,0,0.8); color: white;" %>
              </div>
            </div>

            <div class="row field">
              <div class="col-md-12">
                <%= f.submit t("sign_up.main_action"), class: "btn btn-primary btn-block btn-lg" %>
              </div>
            </div>
            <%#= render "devise/shared/links" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-md-6 text-center">
        <h1>
          <%= raw @info.main_title %>
        </h1>
        <h2>
          <%= raw @info.main_text %>
        </h2>
        <br>
        <img src="<%= asset_path(@info.logo)%>" alt="" class="" style="width: 300px;"/>
        <p class="p-cls">
          <%= raw @info.main_sub_text %>
        </p>
      </div>
    </div>
  </div>
</div>
<!--HOME SECTION END  -->
