<div class="btn-group-vertical btn-block">
	<%- if controller_name != 'sessions' %>
	<%= link_to t("sign_in.main_action"), new_session_path(resource_name), class: "btn btn-default btn-block" %>
	<% end -%>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<%= link_to t("sign_up.main_action"), new_registration_path(resource_name), class: "btn btn-default btn-block" %>
	<% end -%>

	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	<%= link_to t("forgot_pass.main_action"), new_password_path(resource_name), class: "btn btn-default btn-block" %>
	<% end -%>

	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<%= link_to t("confirmations.main_action"), new_confirmation_path(resource_name), class: "btn btn-default btn-block" %>
	<% end -%>

	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	<%= link_to t("unlocks.main_action"), new_unlock_path(resource_name), class: "btn btn-default btn-block" %>
	<% end -%>

	<%- if devise_mapping.omniauthable? %>
	<%- resource_class.omniauth_providers.each do |provider| %>
	<%= link_to "#{t("social.main_action")} #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-default btn-block" %><br />
	<% end -%>
	<% end -%>
</div>
